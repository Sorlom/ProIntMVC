@model MinisteriodeEducacionMVCApp.Models.PersonalColegio

@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>


@using (Html.BeginForm("Index","Login",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ingrese los datos del Usuario</h4>
        <h5>@ViewBag.Msg</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.loginPColegio,"Cuenta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.loginPColegio, new { Name = "Nom", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.loginPColegio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.passPColegio, "Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.passPColegio, new { Name = "Pass", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.passPColegio, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
