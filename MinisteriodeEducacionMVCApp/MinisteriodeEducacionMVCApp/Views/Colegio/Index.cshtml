@model IEnumerable<MinisteriodeEducacionMVCApp.Models.Colegio>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre")
        </th>
        <th>
            @Html.DisplayName("Direccion")
        </th>
        <th>
            @Html.DisplayName("Correo")
        </th>
        <th>
            @Html.DisplayName("Cuenta Ministro")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonalMinisterio.loginMinistro)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idColegio }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idColegio }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idColegio })
        </td>
    </tr>
}

</table>
