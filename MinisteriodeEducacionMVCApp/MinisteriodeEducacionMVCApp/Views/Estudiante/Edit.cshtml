@model MinisteriodeEducacionMVCApp.Models.Estudiante

@{
    ViewBag.Title = "Edit";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Estudiante</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.nroRegistroEst)

        <div class="form-group">
            @Html.LabelFor(model => model.loginEstudiante, "Login Estudiante", htmlAttributes: new { @class = "control-label col-md-2" })
